{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules",
    "www"
  ],
  "typeRoots": [
    "../node_modules/@types"
  ],
  "types": [
    "jasmine",
    "hammerjs"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}